extends layout

block content
  h1 #{title}
  p #{subTitle}

  for feed in feeds
    div(class='jumbotron')
      h3
        a(href='#{feed.article_url}') #{feed.title}
      p #{feed.summary}
      h6 - #{feed.posted_date}
  
  script(type='text/javascript').
    function TimedRefresh( t ) {
      setTimeout("location.reload(true);", t);
    }
  script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.4/angular.js')
